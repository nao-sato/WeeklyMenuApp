<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/apple"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/anim_apple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/phone"
            android:layout_width="130dp"
            android:layout_height="250dp"
            android:layout_marginTop="800dp"
            android:src="@drawable/anim_phone"
            app:layout_constraintEnd_toStartOf="@+id/F4"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toEndOf="@+id/F1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/nav_view" />

<!--        <fragment-->
<!--            android:id="@+id/top_fragment"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            app:layout_constraintBottom_toTopOf="@+id/menu_bottom_nav"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.517"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <ImageView
            android:id="@+id/F1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:alpha="0"
            android:src="@drawable/anim_food1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/F2" />

        <ImageView
            android:id="@+id/F2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="72dp"
            android:alpha="0"
            android:src="@drawable/anim_food2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/F3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="40dp"
            android:alpha="0"
            android:src="@drawable/anim_food3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/F4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="40dp"
            android:alpha="0"
            android:src="@drawable/anim_food4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/F3" />

        <TextView
            android:id="@+id/greet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greet"
            app:layout_constraintStart_toStartOf="@id/phone"
            app:layout_constraintTop_toTopOf="@id/phone"
            app:layout_constraintBottom_toBottomOf="@id/phone"
            app:layout_constraintEnd_toEndOf="@id/phone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>